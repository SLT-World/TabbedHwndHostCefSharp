<Window x:Class="TabbedCefSharp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TabbedCefSharp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Height="20" VerticalAlignment="Top" Content="New tab" Click="NewTabButton_Click"/>
        <Button Height="20" Margin="0,20,0,0" VerticalAlignment="Top" Content="Close current tab" Click="CloseTabButton_Click"/>
        <TabControl x:Name="Tabs" Margin="0,40,0,0"/>
    </Grid>
</Window>
